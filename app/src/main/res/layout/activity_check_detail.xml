<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context=".detail.CheckDetailActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:layout_margin="3dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/activity_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"
                android:text="签到活动详情"/>
            <TextView
                android:id="@+id/detail_num"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="已签到: 0人"/>
            <TextView
                android:id="@+id/detail_createdDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="创建时间: 2018-01-17"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_owner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:textSize="17sp"
            android:text="创建者: Dave"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:text="创建地点: "/>
                <TextView
                    android:id="@+id/position_description"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:text="DLUT"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/detail_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingEnd="20dp"
                android:src="@mipmap/position"/>
        </LinearLayout>
        <TextView
            android:id="@+id/detail_topic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:textSize="17sp"
            android:text="话题讨论"/>
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="20dp"
            android:layout_margin="3dp"
            android:gravity="center_vertical"
            android:background="@drawable/input"
            android:hint="描述..."/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/sign_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>