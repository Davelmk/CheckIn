<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context=".detail.GroupJoinedActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:layout_margin="3dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/group_joined_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"
                android:text="签到活动详情"/>
            <TextView
                android:id="@+id/description_group_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="描述..."/>
            <TextView
                android:id="@+id/time_group_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="创建时间:2018-01-17"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/owner_group_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:textSize="17sp"
            android:text="创建者: Dave"/>

        <TextView
            android:id="@+id/num_group_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:textSize="17sp"
            android:text="群组人数: 100人"/>
    </LinearLayout>
</LinearLayout>